{# templates/bundles/KnpPaginatorBundle/Pagination/tailwind_pagination.html.twig #}
{% if pageCount > 1 %}
    <div class="my-6">
        <ul class="flex flex-wrap justify-center items-center space-x-1">
            {# Premier et Précédent #}
            {% if first is defined and current != first %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): first})) }}" 
                       class="px-3 py-2 bg-white border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
                        &laquo;
                    </a>
                </li>
            {% endif %}
            
            {% if previous is defined %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}" 
                       class="px-3 py-2 bg-white border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
                        &lsaquo;
                    </a>
                </li>
            {% endif %}
            
            {# Pages #}
            {% for page in pagesInRange %}
                {% if page == current %}
                    <li>
                        <span class="px-3 py-2 bg-indigo-600 border border-indigo-600 rounded-md text-sm font-medium text-white">
                            {{ page }}
                        </span>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path(route, query|merge({(pageParameterName): page})) }}" 
                           class="px-3 py-2 bg-white border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
                            {{ page }}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
            
            {# Suivant et Dernier #}
            {% if next is defined %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): next})) }}" 
                       class="px-3 py-2 bg-white border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
                        &rsaquo;
                    </a>
                </li>
            {% endif %}
            
            {% if last is defined and current != last %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): last})) }}" 
                       class="px-3 py-2 bg-white border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
                        &raquo;
                    </a>
                </li>
            {% endif %}
        </ul>
    </div>
{% endif %}